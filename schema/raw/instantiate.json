{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "InstantiateMsg",
  "description": "This struct contains required variables to instantiate a new contract.",
  "type": "object",
  "required": [
    "allowed_token",
    "owner"
  ],
  "properties": {
    "allowed_token": {
      "description": "Representes the tokens users are allowed to deposit.",
      "allOf": [
        {
          "$ref": "#/definitions/Token"
        }
      ]
    },
    "owner": {
      "description": "Contract owner address",
      "type": "string"
    }
  },
  "additionalProperties": false,
  "definitions": {
    "Token": {
      "description": "Represents a token, which can be either a native token or a CW20 token.",
      "oneOf": [
        {
          "description": "Variant to indicate a native token with its denom.",
          "type": "object",
          "required": [
            "native"
          ],
          "properties": {
            "native": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        {
          "description": "Variant to indicate a Cw20 token with its cw20 contract address",
          "type": "object",
          "required": [
            "cw20"
          ],
          "properties": {
            "cw20": {
              "type": "string"
            }
          },
          "additionalProperties": false
        }
      ]
    }
  }
}
